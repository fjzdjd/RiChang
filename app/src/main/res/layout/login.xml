<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:context="ddw.com.richang.Activity.pre.Login">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/gotologin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:text="去登录"
            android:textColor="@color/rorange"
            android:textSize="16sp"
            android:visibility="gone"/>
        <TextView
            android:id="@+id/gotosign"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:text="去注册"
            android:textColor="@color/rorange"
            android:textSize="16sp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginLeft="36dp"
        android:layout_marginRight="36dp"
        android:layout_marginTop="28dp"
        android:orientation="vertical">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="96dp"
            android:layout_margin="24dp"
            android:src="@drawable/icon_cir"/>


        <RelativeLayout
            android:id="@+id/loginlayout"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginTop="12dp">
            <LinearLayout
                android:id="@+id/linearLayout"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="32dp"
                    android:orientation="horizontal">
                    <ImageView
                        android:id="@+id/imgloginphone"
                        android:layout_width="wrap_content"
                        android:layout_height="26dp"
                        android:layout_marginRight="13dp"
                        android:src="@drawable/phone2"/>
                    <EditText
                        android:id="@+id/inputloginphone"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:background="@null"
                        android:hint="输入手机号"
                        android:inputType="phone"
                        android:maxLength="11"
                        android:textSize="15sp"/>
                </LinearLayout>


                <ImageView
                    android:id="@+id/lineloginphone"
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:layout_marginBottom="18dp"
                    android:background="@color/rorange"/>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="32dp"
                    android:orientation="horizontal">
                    <ImageView
                        android:id="@+id/imgloginpasswd"
                        android:layout_width="wrap_content"
                        android:layout_height="26dp"
                        android:layout_marginRight="13dp"
                        android:src="@drawable/password2"/>
                    <EditText
                        android:id="@+id/inputloginpassword"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:background="@null"
                        android:hint="输入密码"
                        android:inputType="textPassword"
                        android:textSize="15sp"/>
                </LinearLayout>


                <ImageView
                    android:id="@+id/lineloginpasswd"
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:layout_marginBottom="14dp"
                    android:background="@color/rorange"/>


                <TextView
                    android:id="@+id/resetpasswd"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:paddingBottom="3dp"
                    android:paddingLeft="12dp"
                    android:text="找回密码?"
                    android:textColor="@color/rorange"/>
                <Button
                    android:id="@+id/submitlogin"
                    android:layout_width="fill_parent"
                    android:layout_height="45dp"
                    android:layout_marginTop="25dp"
                    android:background="@color/rorange"
                    android:text="登  录"
                    android:textColor="#ffffff"
                    android:textSize="18sp"/>
            </LinearLayout>


            <TextView
                android:id="@+id/nolog"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="32dp"
                android:padding="12dp"
                android:text="跳过登录，直接进入"
                android:textColor="@color/rorange"/>
        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/signlayout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:visibility="gone">
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="32dp"
                    android:orientation="horizontal">
                    <ImageView
                        android:id="@+id/imginputphone"
                        android:layout_width="20dp"
                        android:layout_height="26dp"
                        android:layout_marginRight="13dp"
                        android:src="@drawable/phone2"/>
                    <EditText
                        android:id="@+id/inputphone"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:background="@null"
                        android:hint="输入手机号"
                        android:inputType="phone"
                        android:maxLength="11"
                        android:textSize="15sp"/>
                </LinearLayout>
                <ImageView
                    android:id="@+id/lineinputphone"
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:layout_marginBottom="18dp"
                    android:background="@color/rorange"/>

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="32dp"
                        android:layout_marginRight="120dp"
                        android:orientation="horizontal">
                        <ImageView
                            android:id="@+id/imginputcheck"
                            android:layout_width="20dp"
                            android:layout_height="26dp"
                            android:layout_marginRight="13dp"
                            android:src="@drawable/pencil2"/>
                        <EditText
                            android:id="@+id/inputcheckphone"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:background="@null"
                            android:hint="短信验证码"
                            android:inputType="number"
                            android:maxLength="6"
                            android:textSize="15sp"/>
                    </LinearLayout>
                    <Button
                        android:id="@+id/sendcheckphone"
                        android:layout_width="110dp"
                        android:layout_height="32dp"
                        android:layout_alignParentRight="true"
                        android:background="@color/rorange"
                        android:text="获取验证码"
                        android:textColor="#ffffff"
                        android:textColorHint="#ffffff"/>
                </RelativeLayout>
                <ImageView
                    android:id="@+id/lineinputcheck"
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:layout_marginBottom="18dp"
                    android:layout_marginRight="120dp"
                    android:background="@color/rorange"/>


                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="32dp"
                    android:orientation="horizontal">
                    <ImageView
                        android:id="@+id/imgpasswd"
                        android:layout_width="20dp"
                        android:layout_height="26dp"
                        android:layout_marginRight="13dp"
                        android:src="@drawable/password2"/>
                    <EditText
                        android:id="@+id/inputpassword1"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:background="@null"
                        android:hint="输入密码"
                        android:inputType="textPassword"
                        android:textSize="15sp"/>

                </LinearLayout>
                <ImageView
                    android:id="@+id/linepasswd"
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:layout_marginBottom="18dp"
                    android:background="@color/rorange"/>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="32dp"
                    android:orientation="horizontal">
                    <ImageView
                        android:id="@+id/imgpasswd2"
                        android:layout_width="20dp"
                        android:layout_height="26dp"
                        android:layout_marginRight="13dp"
                        android:src="@drawable/password2"/>
                    <EditText
                        android:id="@+id/inputpassword2"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:background="@null"
                        android:hint="再次输入密码"
                        android:inputType="textPassword"
                        android:textSize="15sp"/>
                </LinearLayout>
                <ImageView
                    android:id="@+id/linepasswd2"
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:layout_marginBottom="18dp"
                    android:background="@color/rorange"/>
                <Button
                    android:id="@+id/submitsign"
                    android:layout_width="fill_parent"
                    android:layout_height="45dp"
                    android:layout_marginTop="28dp"
                    android:background="@color/rorange"
                    android:text="注册"
                    android:textColor="#ffffff"
                    android:textSize="18sp"/>
            </LinearLayout>
        </RelativeLayout>


    </LinearLayout>


</RelativeLayout>
