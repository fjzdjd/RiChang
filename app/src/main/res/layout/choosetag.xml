<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/tagslist"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ddw.com.richang.Activity.banner.ChooseTag">
    <!--top-->
    <RelativeLayout
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:background="#ffffff"
        android:layout_centerVertical="true"
        android:layout_alignParentTop="true"
        android:layout_width="fill_parent"
        android:layout_height="56dp">
        <TextView
            android:text="标签选择"
            android:textColor="@color/rorange"
            android:gravity="center_vertical"
            android:layout_centerInParent="true"
            android:layout_centerVertical="true"
            android:textSize="20sp"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent" />
        <TextView
            android:id="@+id/tagcancel"
            android:textSize="16sp"
            android:paddingRight="12dp"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:paddingLeft="0dp"
            android:text="取消"
            android:textColor="@color/rorange"
            android:gravity="center_vertical"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tagsubmit"
            android:paddingLeft="12dp"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:textSize="16sp"
            android:text="确定"
            android:textColor="@color/rorange"
            android:gravity="center_vertical"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <RelativeLayout
        android:padding="7dp"
        android:paddingLeft="10dp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="我的标签"
            android:textColor="#8b8b8b"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <ddw.com.richang.controller.view.layout.HLView
        android:id="@+id/mytagsview"
        android:background="#ffffff"
        android:layout_width="fill_parent"
        android:layout_height="190dp">

    </ddw.com.richang.controller.view.layout.HLView>
    <RelativeLayout
        android:padding="7dp"
        android:paddingLeft="10dp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="点击添加标签"
            android:textColor="#8b8b8b"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <ddw.com.richang.controller.view.layout.HLView
        android:background="#ffffff"
        android:id="@+id/alltagsview"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        </ddw.com.richang.controller.view.layout.HLView>
</LinearLayout>
