<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/maintabview2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:visibility="gone">




    <!--axis-->
    <RelativeLayout
        android:layout_marginLeft="35dp"
        android:layout_width="90dp"
        android:layout_height="fill_parent">
        <ImageView
            android:layout_centerHorizontal="true"
            android:scaleType="fitXY"
            android:background="#fc993a"
            android:layout_width="2dp"
            android:layout_height="225dp" />
        <ImageView
            android:layout_centerHorizontal="true"
            android:scaleType="fitXY"
            android:src="@drawable/line"
            android:layout_marginTop="255dp"
            android:layout_width="3dp"
            android:layout_height="fill_parent" />

        <ImageView
            android:layout_centerHorizontal="true"
            android:layout_marginTop="225dp"
            android:src="@drawable/today"
            android:paddingLeft="3dp"
            android:layout_width="33dp"
            android:layout_height="30dp" />
    </RelativeLayout>

    <ddw.com.richang.controller.view.layout.scrollview.ObScrollView
        android:id="@+id/plandays"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">
        <LinearLayout
            android:paddingLeft="12dp"
            android:paddingTop="215dp"
            android:paddingBottom="220dp"
            android:orientation="vertical"
            android:id="@+id/plandayslist"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"></LinearLayout>
    </ddw.com.richang.controller.view.layout.scrollview.ObScrollView>


    <ScrollView
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="100dp"
        android:layout_marginRight="12dp"
        android:layout_centerVertical="true"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/planoneday"
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
        </LinearLayout>
    </ScrollView>

    <ImageView
        android:src="@drawable/planmore"
        android:scaleType="fitStart"
        android:layout_width="90dp"
        android:layout_marginLeft="35dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"/>

</RelativeLayout>
