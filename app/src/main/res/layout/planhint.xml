<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ddw.com.richang.Activity.banner.Planhint">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">
        <!--top-->
        <RelativeLayout
            android:layout_marginBottom="7dp"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:background="#ffffff"
            android:layout_centerVertical="true"
            android:layout_alignParentTop="true"
            android:layout_width="fill_parent"
            android:layout_height="56dp">
            <TextView
                android:text="提醒时间"
                android:textColor="@color/rorange"
                android:gravity="center_vertical"
                android:layout_centerInParent="true"
                android:layout_centerVertical="true"
                android:textSize="20sp"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent" />
            <ImageView
                android:id="@+id/cancelsetplanhint"
                android:layout_centerVertical="true"
                android:src="@drawable/leftgo"
                android:paddingTop="15sp"
                android:paddingBottom="15sp"
                android:paddingRight="20dp"
                android:layout_width="wrap_content"
                android:layout_height="46sp" />
            <TextView
                android:id="@+id/submitplanhint"
                android:paddingLeft="12dp"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                android:textSize="16sp"
                android:text="确定"
                android:textColor="@color/rorange"
                android:gravity="center_vertical"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>



        <RelativeLayout
            android:id="@+id/nohintbox"
            android:background="#ffffff"
            android:padding="12dp"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
            <TextView
                android:text="不提醒"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <ImageView
                android:id="@+id/nohint"
                android:src="@drawable/select_icon"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="14sp" />
        </RelativeLayout>
        <ImageView
            android:layout_marginLeft="12dp"
            android:background="#8c8c8c"
            android:layout_width="fill_parent"
            android:layout_height="1dp" />
        <RelativeLayout
            android:id="@+id/hint1box"
            android:background="#ffffff"
            android:padding="12dp"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
            <TextView
                android:text="前一小时"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <ImageView
                android:id="@+id/hint1"
                android:src="@drawable/select_icon"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="14sp" />
        </RelativeLayout>
        <ImageView
            android:layout_marginLeft="12dp"
            android:background="#8c8c8c"
            android:layout_width="fill_parent"
            android:layout_height="1dp" />
        <RelativeLayout
            android:id="@+id/hint2box"
            android:background="#ffffff"
            android:padding="12dp"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
            <TextView
                android:text="前一天"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <ImageView
                android:id="@+id/hint2"
                android:src="@drawable/select_icon"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="14sp" />
        </RelativeLayout>
        <ImageView
            android:layout_marginLeft="12dp"
            android:background="#8c8c8c"
            android:layout_width="fill_parent"
            android:layout_height="1dp" />
        <RelativeLayout
            android:id="@+id/hint3box"
            android:background="#ffffff"
            android:padding="12dp"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
            <TextView
                android:text="前三天"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <ImageView
                android:id="@+id/hint3"
                android:src="@drawable/select_icon"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="14sp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_marginTop="7dp"
            android:background="#ffffff"
            android:padding="12dp"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textColor="@color/dark"
                android:text="提醒时间"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <LinearLayout
                android:layout_alignParentRight="true"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:textColor="@color/dark"
                    android:id="@+id/hinttime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <ImageView
                    android:visibility="invisible"
                    android:layout_marginLeft="5dp"
                    android:src="@drawable/goright"
                    android:layout_width="wrap_content"
                    android:layout_height="14sp" />
            </LinearLayout>

        </RelativeLayout>
    </LinearLayout>



</RelativeLayout>
