<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ddw.com.richang.Activity.activities.Content">

    <!--main-->
    <RelativeLayout
        android:layout_marginBottom="48dp"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">
        <!--top-->
        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="200dp"><!--56+120+24-->
            <ImageView
                android:id="@+id/activity_guass"
                android:scaleType="fitXY"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent" />
            <ImageView
                android:background="#20000000"
                android:scaleType="fitXY"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent" />
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">
                <!--topbanner-->
                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="56dp">
                    <ImageView
                        android:id="@+id/activity_back"
                        android:paddingTop="12dp"
                        android:paddingBottom="15dp"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="12dp"
                        android:src="@drawable/back_icon"
                        android:layout_width="wrap_content"
                        android:paddingRight="18dp"
                        android:layout_height="46dp" />
                    <TextView
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="42dp"
                        android:layout_marginRight="56dp"
                        android:textSize="18sp"
                        android:id="@+id/contenttoptitle"
                        android:text="活动介绍"
                        android:lines="1"
                        android:paddingBottom="3dp"
                        android:textColor="#ffffff"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content" />
                    <ImageView
                        android:id="@+id/sharebtn"
                        android:src="@drawable/share_icon"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:paddingTop="15dp"
                        android:paddingBottom="19dp"
                        android:paddingLeft="17dp"
                        android:paddingRight="17dp"
                        android:layout_width="wrap_content"
                        android:layout_height="64dp" />
                </RelativeLayout>

            </LinearLayout>
        </RelativeLayout>
        <!--content-->
        <ddw.com.richang.controller.view.layout.scrollview.ObScrollView
            android:id="@+id/contentscroll"
            android:layout_marginTop="56dp"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">
                <!--summary-->
                <LinearLayout
                    android:paddingRight="12dp"
                    android:paddingBottom="24dp"
                    android:paddingLeft="12dp"
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/activity_poster"
                        android:layout_marginRight="15dp"
                        android:scaleType="fitXY"
                        android:layout_width="120dp"
                        android:layout_height="120dp" />
                    <RelativeLayout
                        android:layout_width="fill_parent"
                        android:layout_height="120dp">
                        <TextView
                            android:layout_alignParentTop="true"
                            android:textSize="18sp"
                            android:maxLines="3"
                            android:textColor="#ffffff"
                            android:id="@+id/activity_title"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content" />
                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_alignParentBottom="true"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content">
                            <ImageView
                                android:src="@drawable/label_icon2"
                                android:layout_width="wrap_content"
                                android:layout_height="16sp" />
                            <TextView
                                android:textColor="#ffffff"
                                android:textSize="14sp"
                                android:gravity="bottom"
                                android:id="@+id/activity_tag"
                                android:layout_width="fill_parent"
                                android:layout_height="16sp" />
                        </LinearLayout>
                    </RelativeLayout>
                </LinearLayout>
                <!--time-->
                <ImageView
                    android:background="@color/lightbk"
                    android:layout_width="fill_parent"
                    android:layout_height="7dp" />
                <RelativeLayout
                    android:background="#ffffff"
                    android:layout_width="fill_parent"
                    android:layout_height="48dp">
                    <LinearLayout
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="12dp"
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <TextView
                            android:textSize="16sp"
                            android:text="时间："
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                        <TextView
                            android:id="@+id/activity_time"
                            android:textSize="16sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </LinearLayout>
                    <TextView
                        android:id="@+id/contenthint"
                        android:layout_centerVertical="true"
                        android:gravity="center"
                        android:height="30dp"
                        android:width="65dp"
                        android:textSize="16sp"
                        android:layout_marginRight="12dp"
                        android:layout_alignParentRight="true"
                        android:background="@drawable/tagme"
                        android:textColor="#ffffff"
                        android:text="提醒我"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </RelativeLayout>
                <!--详情-->
                <TextView
                    android:background="@color/lightbk"
                    android:text="活动详情"
                    android:paddingLeft="12dp"
                    android:textColor="#8c8c8c"
                    android:gravity="center_vertical"
                    android:layout_width="fill_parent"
                    android:layout_height="30dp" />
                <LinearLayout
                    android:paddingLeft="12dp"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp"
                    android:orientation="vertical"
                    android:background="#ffffff"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:paddingTop="3dp"
                        android:paddingBottom="3dp"
                        android:orientation="horizontal"
                        android:layout_height="fill_parent"
                        android:layout_width="fill_parent">
                        <TextView
                            android:textSize="15dp"
                            android:text="地点："
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                        <TextView
                            android:id="@+id/activity_place"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </LinearLayout>
                    <LinearLayout
                        android:paddingTop="3dp"
                        android:paddingBottom="3dp"
                        android:orientation="horizontal"
                        android:layout_height="fill_parent"
                        android:layout_width="fill_parent">
                        <TextView
                            android:textSize="15dp"
                            android:text="规模："
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                        <TextView
                            android:id="@+id/activity_size"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </LinearLayout>
                    <LinearLayout
                        android:paddingTop="3dp"
                        android:paddingBottom="3dp"
                        android:orientation="horizontal"
                        android:layout_height="fill_parent"
                        android:layout_width="fill_parent">
                        <TextView
                            android:textSize="15dp"
                            android:text="费用："
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                        <TextView
                            android:id="@+id/activity_fee"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </LinearLayout>
                </LinearLayout>

                <TextView
                    android:background="@color/lightbk"
                    android:text="发布者"
                    android:paddingLeft="12dp"
                    android:textColor="#8c8c8c"
                    android:gravity="center_vertical"
                    android:layout_width="fill_parent"
                    android:layout_height="30dp" />
                <LinearLayout
                    android:background="#ffffff"
                    android:padding="6dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_marginLeft="6dp"
                        android:layout_marginRight="15dp"
                        android:id="@+id/publisherpic"
                        android:layout_width="45dp"
                        android:layout_height="45dp" />
                    <TextView
                        android:textSize="20sp"
                        android:id="@+id/publishername"
                        android:maxLines="1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>

                <!--活动介绍-->
                <TextView
                    android:background="@color/lightbk"
                    android:text="主讲人"
                    android:paddingLeft="12dp"
                    android:textColor="#8c8c8c"
                    android:gravity="center_vertical"
                    android:layout_width="fill_parent"
                    android:layout_height="30dp" />
                <ImageView
                    android:background="@color/light"
                    android:layout_width="fill_parent"
                    android:layout_height="1dp" />
                <TextView
                    android:background="#ffffff"
                    android:id="@+id/activity_introduce"
                    android:paddingLeft="12dp"
                    android:paddingRight="12dp"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp"
                    android:lineSpacingExtra="5dp"
                    android:textColor="@color/black"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content" />
                <!--<TextView-->
                    <!--android:id="@+id/actmore"-->
                    <!--android:paddingTop="4dp"-->
                    <!--android:visibility="gone"-->
                    <!--android:paddingBottom="16dp"-->
                    <!--android:layout_marginBottom="24dp"-->
                    <!--android:textColor="@color/rorange"-->
                    <!--android:text="更多内容"-->
                    <!--android:textAlignment="center"-->
                    <!--android:gravity="center_horizontal"-->
                    <!--android:background="#fff"-->
                    <!--android:layout_width="fill_parent"-->
                    <!--android:layout_height="wrap_content" />-->

                <!--更多内容-->
                <LinearLayout
                    android:orientation="vertical"
                    android:visibility="gone"
                    android:id="@+id/actmore"
                    android:background="#ffffff"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:background="@color/lightbk"
                        android:text="更多内容"
                        android:paddingLeft="12dp"
                        android:textColor="#8c8c8c"
                        android:gravity="center_vertical"
                        android:layout_width="fill_parent"
                        android:layout_height="30dp" />
                    <WebView
                        android:id="@+id/morecontent"
                        android:layout_width="fill_parent"
                        android:layout_height="200dp">
                    </WebView>
                </LinearLayout>

            </LinearLayout>
        </ddw.com.richang.controller.view.layout.scrollview.ObScrollView>
    </RelativeLayout>
    <!--bottom-->
    <LinearLayout
        android:alpha="0.9"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="56dp">
        <LinearLayout
            android:id="@+id/activity_addcollect"
            android:gravity="center"
            android:background="#ffffff"
            android:orientation="horizontal"
            android:layout_width="125dp"
            android:layout_height="fill_parent">
            <ImageView
                android:id="@+id/activity_showcollect"
                android:scaleType="fitCenter"
                android:layout_marginRight="10dp"
                android:src="@drawable/collection_icon"
                android:layout_width="20sp"
                android:layout_height="20sp" />
            <TextView
                android:id="@+id/tvcollect"
                android:text="收藏"
                android:textSize="18sp"
                android:textColor="#000000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/addtoplan"
            android:gravity="center"
            android:background="@color/rorange"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">
            <TextView
                android:textSize="18sp"
                android:textColor="#ffffff"
                android:text="加入行程"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>