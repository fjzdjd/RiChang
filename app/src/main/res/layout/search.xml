<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="ddw.com.richang.Activity.banner.Search">
    <RelativeLayout
        android:background="#ffffff"
        android:layout_width="fill_parent"
        android:layout_height="44dp">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="56dp"
            android:background="@drawable/corner"
            android:gravity="center_vertical"
            android:paddingLeft="14dp"
            android:layout_height="36dp">
            <ImageView
                android:scaleType="fitCenter"
                android:src="@drawable/search_icon"
                android:layout_width="wrap_content"
                android:layout_height="16sp" />
            <EditText
                android:id="@+id/search_content"
                android:layout_marginLeft="3dp"
                android:hint="搜索科技、媒体、互联网"
                android:textColor="#000000"
                android:background="@null"
                android:textSize="16sp"
                android:singleLine="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <TextView
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:textColor="@color/rorange"
            android:textSize="16sp"
            android:text="取消"
            android:id="@+id/search_cancel"
            android:layout_marginRight="12dp"
            android:gravity="center_vertical"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent" />
    </RelativeLayout>
    <LinearLayout
        android:layout_marginTop="7dp"
        android:id="@+id/beforesearch"
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">
        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/searchhistorylistbox"
            android:visibility="gone"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:background="#ffffff"
                android:orientation="vertical"
                android:id="@+id/searchhistorylist"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">
            </LinearLayout>
            <TextView
                android:padding="12dp"
                android:textAlignment="center"
                android:gravity="center"
                android:background="#ffffff"
                android:textColor="@color/dark"
                android:id="@+id/clearsearchhistory"
                android:text="清空搜索记录"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:paddingLeft="12dp"
            android:layout_marginTop="7dp"
            android:background="#ffffff"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="44dp">
            <ImageView
                android:src="@drawable/hot_icon"
                android:layout_width="16sp"
                android:layout_height="16sp" />
            <TextView
                android:textColor="@color/rorange"
                android:text="热门搜索"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <ImageView
            android:background="#45000000"
            android:layout_width="fill_parent"
            android:layout_height="1dp">
        </ImageView>
        <ddw.com.richang.controller.view.layout.HLView
            android:id="@+id/hotsearch"
            android:background="#ffffff"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">
        </ddw.com.richang.controller.view.layout.HLView>
    </LinearLayout>
</LinearLayout>
