<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:card_view="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@color/background"
              android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:id="@+id/comprehensive_cardView"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="0dp"
        android:elevation="4dp"
        android:foreground="?android:attr/selectableItemBackground"
        card_view:cardCornerRadius="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <ImageView
                android:id="@+id/choiceness_detail_img_poster"
                android:layout_width="match_parent"
                android:layout_height="176dp"
                android:layout_gravity="center"
                android:scaleType="fitXY"/>

            <TextView
                android:id="@+id/choiceness_detail_txt_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:paddingEnd="10dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingStart="10dp"
                android:paddingTop="2dp"
                android:text="漫谈读书"
                android:textColor="@color/mainGrayTxtColor"
                android:textSize="15dp"/>

            <TextView
                android:id="@+id/choiceness_detail_txt_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:maxLines="4"
                android:paddingEnd="10dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingStart="10dp"
                android:paddingTop="2dp"
                android:text="8月20日"
                android:textColor="@color/mainGrayTxtColor"
                android:textSize="15dp"/>

            <TextView
                android:id="@+id/choiceness_detail_txt_readMore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end|center_vertical"
                android:drawableRight="@mipmap/look_morexx"
                android:gravity="center_vertical"
                android:padding="10dp"
                android:background="?android:attr/selectableItemBackground"
                android:text="查看更多"
                android:textColor="@color/mainColor"/>
        </LinearLayout>


    </android.support.v7.widget.CardView>

</LinearLayout>