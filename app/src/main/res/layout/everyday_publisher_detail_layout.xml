<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/background"
              android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginBottom="1dp"
        android:background="@color/white">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="46dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:background="?android:attr/selectableItemBackground"
            android:onClick="closeCurrentWin"
            android:paddingEnd="10dp"
            android:paddingLeft="1dp"
            android:paddingRight="10dp"
            android:paddingStart="1dp"
            android:src="@mipmap/back_icon_orange"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="个人信息"
            android:textColor="@color/mainColor"
            android:textSize="18sp"/>

        <TextView
            android:id="@+id/enroll_txt_setting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="?android:attr/selectableItemBackground"
            android:padding="10dp"
            android:text="私信"
            android:textColor="@color/mainColor"
            android:textSize="15dp"/>

    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal"
        android:padding="10dp">


        <ddw.com.richang.custom.CustomUi.CustomCircleImageView
            android:id="@+id/publisher_img_header"
            android:layout_width="86dp"
            android:layout_height="86dp"
            android:layout_gravity="center_horizontal"
            android:scaleType="centerInside"
            android:src="@mipmap/imggrey"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="5dp"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView android:id="@+id/publisher_txt_title"
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:layout_centerVertical="true"
                          android:text="武汉蹭课"
                          android:textColor="@color/font_black_1"
                          android:textSize="16dp"/>

                <TextView android:id="@+id/publisher_txt_focus_num"
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:layout_alignParentRight="true"
                          android:drawableTop="@mipmap/user_header"
                          android:gravity="center"
                          android:paddingEnd="10dp"
                          android:paddingLeft="10dp"
                          android:paddingRight="10dp"
                          android:paddingStart="10dp"
                          android:paddingTop="5dp"
                          android:text="加关注"
                          android:textColor="@color/mainColor"
                          android:textSize="11dp"/>

            </RelativeLayout>


            <TextView
                android:id="@+id/publisher_txt_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:maxLines="2"
                android:paddingTop="5dp"
                android:text="蹭课是一种态度，大学是没好的回忆，过去的时光是最珍贵的财富。"
                android:textColor="@color/mainGrayTxtColor"
                android:textSize="13dp"/>
        </LinearLayout>
    </LinearLayout>



</LinearLayout>